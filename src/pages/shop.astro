---

<MainLayout metatitle="Vin">

    <h1>SPARKLING WINE</h1>
    <div class="line"></div>
    <section>
        {sparklingWines.map((product) => (
            <Card {...product} />
        ))}
    </section>

    <h1>ORANGE WINE</h1>
    <div class="line"></div>
    <section>
        {orangeWines.map((product) => (
            <Card {...product} />
        ))}
